<Window x:Class="Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Generator" 
        xmlns:views="clr-namespace:Generator.Views"
        xmlns:language="clr-namespace:GeneratorApp.Language"
        xmlns:vms="clr-namespace:GeneratorApp.ViewModels"
        xmlns:components="clr-namespace:Generator.Components"
        mc:Ignorable="d"
        Title="Generator" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:SourcesManagerViewModel}">
                <views:SourcesManagerView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:GenerateViewModel}">
                 <views:GenerateView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:LoginViewModel}">
                <views:LoginView/>
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
