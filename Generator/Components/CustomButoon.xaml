<UserControl x:Class="Generator.Components.CustomButoon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Generator.Components"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Name="Btn" Width="50" Height="50" Margin="5" Command="{Binding Command, ElementName=root}" Cursor="Hand"  MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Grid>
                    <Ellipse Fill="{Binding Color, ElementName=root}"/>
                    <Image Source="{Binding Image, ElementName=root}" Stretch="UniformToFill" Width="40" Height="40"/>
                </Grid>
            </ControlTemplate>
        </Button.Template>
    </Button>
</UserControl>
